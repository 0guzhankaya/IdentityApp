@model List<AdminModel.AssignRoleToUserViewModel>

@{
	ViewData["Title"] = "AssignRoleUser";
}

@if (TempData["success"] != null)
{
	<div class="alert alert-info" role="alert">
		@TempData["success"]
	</div>
}

<div class="row">
	<div class="col-md-6 offset-md-3">
		<h2>Kullanıcıya Rol Atama</h2>
		<form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">
			<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
			
			@for (int i = 0; i < Model.Count; i++)
			{
				<div class="mb-3 form-check">
					<input type="checkbox" class="form-check-input" asp-for="@Model[i].Exits" />
					<label class="form-check-label">@Model[i].Name</label> <!--Backend'e gelmez.-->
					<input type="hidden" asp-for="@Model[i].Name" /> <!--Backend'e gelir.-->
					<input type="hidden" asp-for="@Model[i].Id" /> <!--Backend'e gelir.-->
				</div>
			}
			<div class="form-group mt-3">
				<input type="submit" value="Rol ata" class="btn btn-primary" />
			</div>
		</form>

		<div class="mt-3">
			<a asp-controller="Home" asp-action="UserList">Kullanıcı listesine geri dön</a>
		</div>
	</div>
</div>
