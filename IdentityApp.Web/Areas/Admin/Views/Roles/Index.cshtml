@model List<AdminModel.RoleViewModel>

@{
	ViewData["Title"] = "Index";
}

<a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin">Rol Ekle</a>

<div class="row">

	@if (TempData["success"] != null)
	{
		<div class="alert alert-success" role="alert">
			@TempData["success"]
		</div>
	}

	<h4>Roller</h4>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Rol İsmi</th>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>
						<a class="btn btn-warning" asp-area="Admin" asp-controller="Roles" asp-action="RoleUpdate" asp-route-id="@item.Id">
							Güncelle
						</a>
					</td>
					<td>
						<a class="btn btn-danger" asp-area="Admin" asp-controller="Roles" asp-action="RoleDelete" asp-route-id="@item.Id">
							Sil
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>